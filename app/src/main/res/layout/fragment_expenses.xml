<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8d8d8"
    tools:context=".Expenses">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Topbar"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:background="#d8d8d8"

        >

        <View xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:background="@drawable/shape"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:elevation="12dp"
            android:text="Yesterday"
            android:textColor="#ffffff"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="395dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="16dp"
            android:lineSpacingExtra="4dp"
            android:text="28 July 2019"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/button"
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/dailybtn"
            android:backgroundTint="#f4f4f4"
            android:text="Monthly"
            android:textAllCaps="false"
            android:textColor="#9A9A9A"
            android:textSize="12dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button3"
            android:layout_width="50dp"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/monthlybtn"
            android:text="Daily"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Bank Account"
            android:textColor="#ffffff"
            android:textSize="13dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Rs 12450.00"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/card"
            android:elevation="5dp"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/textView2"></View>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="52dp"
            android:elevation="5dp"
            android:text="Inflow"

            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/view2" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="24dp"

            android:elevation="5dp"
            android:text="Rs 230.00"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view2" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="4dp"
            android:layout_marginEnd="24dp"
            android:elevation="5dp"
            android:text="Rs 230.00"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="4dp"
            android:elevation="5dp"

            android:text="Outflow"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:elevation="5dp"
            android:text="Overview"

            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/view2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="#d8d8d8"
            android:elevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Topbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:orientation="vertical"
            android:layout_marginVertical="10dp"
            android:paddingBottom="20dp"
            >
            <RelativeLayout
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:elevation="5dp"
                android:paddingBottom="20dp"
                android:layout_marginBottom="10dp"

                >




                <TextView
                    android:id="@+id/text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="10dp"

                    android:elevation="5dp"
                    android:text="29"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:elevation="5dp"
                    android:text="Monday"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/text6"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:text="28 July 2019"
                    android:textSize="14dp"

                    android:layout_below="@id/day"
                    android:layout_toRightOf="@id/text6"
                    android:layout_marginLeft="10dp"


                    />

                <View
                    android:id="@+id/date_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                   android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#d8d8d8"
                    android:layout_below="@id/date"
                    ></View>
"
                <!-- Start of the component -->
                <ImageView
                    android:id="@+id/category_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/circle"
                    android:layout_below="@+id/date_hr"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    />

                <TextView
                    android:id="@+id/category_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/category_icon"
                    android:elevation="5dp"
                    android:layout_below="@id/date_hr"
                    android:text="Food and Beverages"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/category_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/category_icon"
                    android:elevation="5dp"
                    android:layout_below="@id/category_text"
                    android:text="for Lunch"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/category_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:elevation="5dp"
                    android:layout_below="@id/date_hr"
                    android:text="Rs 230.00"
                    android:textSize="14dp"
                    android:textColor="@color/red"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"/>
                <!-- End of the component -->
                <!-- Start of the component -->
                <ImageView
                    android:id="@+id/category_icon2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/circle"
                    android:layout_below="@+id/category_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/yellow"
                    />

                <TextView
                    android:id="@+id/category_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/category_icon"
                    android:elevation="5dp"
                    android:layout_below="@id/category_memo"
                    android:text="Bills and Utilities"
                    android:textSize="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/category_memo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/category_icon"
                    android:elevation="5dp"
                    android:layout_below="@id/category_text2"
                    android:text="for phone bill"
                    android:textSize="13dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/category_cost2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:elevation="5dp"
                    android:layout_below="@id/category_cost"
                    android:text="Rs 1453.00"
                    android:textSize="14dp"
                    android:textColor="@color/red"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"/>
                <!-- End of the component -->

            </RelativeLayout>



        </LinearLayout>

    </ScrollView>

</RelativeLayout>