<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_name"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        >

        <TextView
            android:id="@+id/AccountName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card"
            android:backgroundTint="#E8ECE8"
            android:elevation="5dp"
            android:padding="10dp"
            android:text="@string/account_all_total"
            android:textColor="#706F6F"
            android:textSize="16sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/AccountIcon"
            android:layout_width="45dp"
            android:layout_height="45dp"
           android:layout_alignParentTop="true"
            android:layout_marginTop="55dp"
            android:layout_marginStart="12dp"
            android:background="@mipmap/ic_launcher_foreground"

            android:contentDescription="@string/todoss" />

        <TextView
            android:id="@+id/AccountType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="55dp"
            android:text="@string/bank_account"
            android:textSize="12sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/AccountAmount"
            android:layout_below="@+id/AccountType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="72dp"
            android:text="@string/account_all_rs3400_00"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            />




    </androidx.cardview.widget.CardView>
</LinearLayout>