<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#d8d8d8"
    android:layout_height="match_parent"
    tools:context=".EditAccount">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d8d8d8"
        tools:context=".Category">



        <View

            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_marginStart="1dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/shape"
            android:gravity="center"></View>



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="421dp"
            android:layout_height="460dp"
            android:layout_above="@+id/add_category_btn"
            android:layout_below="@+id/category_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="102dp"
            android:background="#d8d8d8"
            android:src="@drawable/card" />

        <EditText
            android:id="@+id/txt_add_acc_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="42dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Rs 4560.00" />

        <EditText
            android:id="@+id/account_no_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="421dp"
            android:layout_marginEnd="44dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="2345654" />

        <TextView
            android:id="@+id/lbl_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="57dp"
            android:layout_marginTop="369dp"
            android:text="Amount" />

        <Button
            android:id="@+id/btn_add_acc_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_no_txt"
            android:layout_alignBottom="@+id/imageView"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="23dp"
            android:background="@drawable/card"
            android:backgroundTint="@color/green"
            android:text="Update Details"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/lbl_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="57dp"
            android:layout_marginTop="430dp"
            android:text="Account No" />

        <TextView
            android:id="@+id/lable_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="57dp"
            android:layout_marginTop="305dp"
            android:text="Account Type" />

        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="10dp"
            android:text="Update Account"
            android:textColor="#ffffff"
            android:textSize="26dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lable_acount_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="57dp"
            android:layout_marginTop="238dp"
            android:text="Account Name" />

        <EditText
            android:id="@+id/txt_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="223dp"
            android:layout_marginEnd="42dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="HNB Bank" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_account_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="23dp"
            android:layout_marginRight="42dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Bank Account" />

    </RelativeLayout>
</RelativeLayout>